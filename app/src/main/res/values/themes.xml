<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Autodo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  LIGHT MODE  -->
    <style name="BackgroundColor">
        <item name="android:background">#FAF8FF</item>
    </style>
    <style name="TextColor">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="FloatingButton">
        <item name="android:background">#4B57DB</item>
    </style>
    <style name="ButtonLogin">
        <item name="android:background">#9B93C9</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>